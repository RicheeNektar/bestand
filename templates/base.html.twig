<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="referrer" content="never">
        <title>Bestand</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        >
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
    </head>

    <body data-bs-theme="dark">
        {% if app.request.server.get('HTTP_SEC_FETCH_DEST') != 'iframe' %}
            {% include 'menu.html.twig' %}
        {% endif %}

        <div id="loading" class="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
            <div class="modal-dialog modal-dialog-centered modal-fullscreen-lg-down">
                <div class="modal-content d-block text-center">
                    <div class="spinner-border m-5"></div>
                </div>
            </div>
        </div>

        {% block body %}{% endblock %}

        <script>
            const modal = new bootstrap.Modal(document.getElementById('loading'));

            function showLoading() {
                modal.show();
            }
            function hideLoading() {
                modal.hide();
            }
        </script>
    </body>
</html>
